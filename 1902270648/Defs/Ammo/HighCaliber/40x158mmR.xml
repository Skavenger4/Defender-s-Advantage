		<ammoClass>FullMetalJacket</ammoClass>
		<cookOffProjectile>Bullet_40x158mm_FMJ</cookOffProjectile>
	</ThingDef>
  
  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo40x158mmBase">
    <defName>Ammo_40x158mm_HE</defName>
    <label>40x158mm cartridge (HE)</label>
    <graphicData>
      <texPath>Things/Ammo/HighCaliber/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>5.03</MarketValue>
    </statBases>
		<ammoClass>GrenadeHE</ammoClass>
    <comps>
      <li Class="CombatExtended.CompProperties_ExplosiveCE">
        <explosionDamage>125</explosionDamage>
        <explosionDamageDef>Bomb</explosionDamageDef>
        <explosionRadius>2</explosionRadius>
        <fragments>
          <Fragment_Shell>125</Fragment_Shell>
        </fragments>
        <fragRange>5</fragRange>
        <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
      </li>
    </comps>
