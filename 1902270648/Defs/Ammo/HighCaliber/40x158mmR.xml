  <!-- ================== Projectiles ================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="Base40x158mmBullet" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <speed>180</speed>
	  <soundExplode>MortarBomb_Explode</soundExplode>
	  <flyOverhead>false</flyOverhead>
      <dropsCasings>true</dropsCasings>
    </projectile>
  </ThingDef>
  
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base40x158mmBullet">
		<defName>Bullet_40x158mm_FMJ</defName>
		<label>40x158mm bullet (FMJ)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>210</damageAmountBase>
			<armorPenetrationBase>1.376</armorPenetrationBase>
		</projectile>
	</ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Base40x158mmBullet">
