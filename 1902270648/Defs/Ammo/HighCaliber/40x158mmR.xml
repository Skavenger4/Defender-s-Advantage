 	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo40x158mmBase">
		<defName>Ammo_40x158mm_FMJ</defName>
		<label>40x158mm cartridge (FMJ)</label>
		<graphicData>
			<texPath>Things/Ammo/HighCaliber/FMJ</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
