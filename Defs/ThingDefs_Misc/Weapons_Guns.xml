  <!-- ==================== Luger ==================== -->
  <ThingDef ParentName="BaseHumanMakeableGun_CE">
    <defName>DA_Luger</defName>
    <label>Luger</label>
    <description>Ancient German pistol design. Used in the great war mainly as a sidearm.</description>
    <graphicData>
      <texPath>Things/Weapons/Luger</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <SightsEfficiency>0.7</SightsEfficiency>
      <ShotSpread>0.17</ShotSpread>
      <SwayFactor>0.89</SwayFactor>
      <Bulk>1.75</Bulk>
      <Mass>0.87</Mass>
      <RangedWeapon_Cooldown>0.21</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>25</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <verbs>
