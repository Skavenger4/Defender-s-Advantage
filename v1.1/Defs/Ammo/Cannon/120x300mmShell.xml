	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="Base120mmBullet" ParentName="BaseBullet" Abstract="true">
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>84</speed>
			<dropsCasings>true</dropsCasings>
			<casingMoteDefname>Mote_ShotgunShell</casingMoteDefname>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base120mmBullet">
		<defName>Bullet_120mmS_Buck</defName>
		<label>Muffaloshot pellet</label>
		<graphicData>
			<texPath>Things/Projectile/Shotgun_Pellet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>25</damageAmountBase>
			<pelletCount>100</pelletCount>
			<armorPenetrationSharp>2.5</armorPenetrationSharp>
			<armorPenetrationBlunt>45.540</armorPenetrationBlunt>
			<spreadMult>15.8</spreadMult>
		</projectile>
	</ThingDef>

